{
  "manifest_version": 3,
  "name": "Conductor AI MVP",
  "version": "0.1.0",
  "description": "Orchestrates prompts across multiple AI platforms.",

  "permissions": [
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "*://chatgpt.com/*",
    "*://claude.ai/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Conductor AI"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://claude.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
